        private void ExecuteSafely(Action action, string logMessage = null)
        {
            try
            {
                action();
            }
            catch (Exception ex)
            {
                if (!string.IsNullOrWhiteSpace(logMessage))
                {
                    this.LogMessage(logMessage + "/r/n" + ex.Message);
                }
            }
        }


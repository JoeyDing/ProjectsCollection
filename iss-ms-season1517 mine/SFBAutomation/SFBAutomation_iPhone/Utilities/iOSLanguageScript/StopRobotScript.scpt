tryif ApplicationIsRunning("Processing") thentell application "Processing" to activatemenuItemClick({"Processing", "Sketch", "Stop"})end ifend tryon ApplicationIsRunning(appName)tell application "System Events" to set appNameIsRunning to exists (processes where name is appName)return appNameIsRunningend ApplicationIsRunningon menuItemClick({appName, menuName1, menuItem1})tell application appName to activatetell application "System Events"tell application process appNameset frontmost to trueif menu item menuItem1 of menu 1 of menu bar item menuName1 of menu bar 1 exists thenclick menu item menuItem1 of menu 1 of menu bar item menuName1 of menu bar 1delay 2elsereturn falseend ifend tellend tellend menuItemClick
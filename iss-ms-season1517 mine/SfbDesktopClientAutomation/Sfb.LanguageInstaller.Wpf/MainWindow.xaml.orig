        <telerik:RadTabItem Header="Install New Version">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <GroupBox Header="Install Office" Padding="5" Height="auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25" />
                                            <RowDefinition Height="25" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" MinWidth="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Build Version: " />
                                        <TextBox Grid.Column="1" Text="{Binding Mode=TwoWay, Path=UserTypedBuildVersion,UpdateSourceTrigger=PropertyChanged}" />
                                        <Label Grid.Row="1" Content="Version: " />
                        <Label Grid.Row="1" Grid.Column="1" Content="{Binding Path=UserSelectedOfficeVersion}" />
                                    </Grid>
                                </GroupBox>

                                <GroupBox Grid.Row="1" Header="Select office lanaguages you want to install" Padding="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <telerik:RadListBox Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ItemsSource="{Binding Path=LanguagesPackages}">
                                            <telerik:RadListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel>
                                                    </WrapPanel>
                                                </ItemsPanelTemplate>
                                            </telerik:RadListBox.ItemsPanel>
                                            <telerik:RadListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding IsChecked}" />
                                                        <Label Grid.Column="1" Content="{Binding Language.CultureName}"></Label>
                                                    </Grid>
                                                </DataTemplate>
                                            </telerik:RadListBox.ItemTemplate>
                                        </telerik:RadListBox>
                                        <telerik:RadButton Grid.Row="1" Content="Add languages(s)" Width="150" />
                                        <telerik:RadButton Grid.Row="1" Grid.Column="1" Content="Install office" Width="150" Command="{Binding InstallOfficeCommand}" />
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </telerik:RadTabItem>
                    </telerik:RadTabControl>
                </telerik:RadBusyIndicator>
                <GroupBox Grid.Row="1" Header="Log:">
                    <DockPanel>
                        <TextBox Name="log" VerticalScrollBarVisibility="Visible" />
                    </DockPanel>
                </GroupBox>
            </Grid>
          
        </telerik:RadDocking.DocumentHost>
        <telerik:RadSplitContainer Orientation="Vertical" InitialPosition="DockedRight" Width="500">
            <telerik:RadPaneGroup>
                <telerik:RadPane Header="Installing Language Status">

                    <telerik:RadGridView 
                            x:Name="grid_History"
                            ShowGroupPanel="False"
                            AutoGenerateColumns="False"
                            MinWidth="500"
                            MinHeight="500"
                           ItemsSource="{Binding  Path=Histories}"
                            >

                        <telerik:RadGridView.GroupDescriptors>
                            <telerik:GroupDescriptor Member="grp">
                            </telerik:GroupDescriptor>
                        </telerik:RadGridView.GroupDescriptors>

                        <telerik:RadGridView.GroupHeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Group.Key}" />
                                </StackPanel>
                            </DataTemplate>
                        </telerik:RadGridView.GroupHeaderTemplate>
                        <telerik:RadGridView.Columns>
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding Language}"></telerik:GridViewDataColumn>
                            <telerik:GridViewColumn Header="Error">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="linkbutton" Style="{StaticResource HyperlinkLikeButton}" Content="Link" Tag="{Binding msg}"  />
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                            <telerik:GridViewImageColumn   Header="Status"  DataMemberBinding="{Binding Status, Converter={StaticResource StatusConverter}}" />
                            <telerik:GridViewDataColumn DataMemberBinding="{Binding runTime}" Header="Time" ></telerik:GridViewDataColumn>
                        </telerik:RadGridView.Columns>
                    </telerik:RadGridView>
                </telerik:RadPane>
            </telerik:RadPaneGroup>

        </telerik:RadSplitContainer>


    </telerik:RadDocking>
        
   
</Window>
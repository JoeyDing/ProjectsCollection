<Window x:Class="TheLongestString.SourceCultureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Source Culture" Height="300" Width="300" Loaded="Window_Loaded" SizeToContent="Width">
    
    <Window.Resources>
        <CollectionViewSource x:Key="SourceStrings" Source="{Binding SourceDictionary.Strings,Mode=OneWay}" Filter="CollectionViewSource_Filter" />
    </Window.Resources>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Filter: " />
            <TextBox x:Name="FilterTextBox" MinWidth="200" KeyUp="FilterTextBox_KeyUp" />
        </StackPanel>
        
        <DataGrid Grid.Row="1" IsReadOnly="True" ItemsSource="{Binding Source={StaticResource SourceStrings}}">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>
    </Grid>
</Window>
